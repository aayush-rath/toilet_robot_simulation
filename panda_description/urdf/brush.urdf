<?xml version="1.0"?>
<robot name="brush" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Main brush body -->
  <link name="mirror_brush_body">
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="0.12"/>
      <inertia ixx="0.0006" ixy="0" ixz="0" iyy="0.0012" iyz="0" izz="0.0006"/>
    </inertial>

    <!-- Ergonomic Handle (blue plastic) -->
    <visual>
      <origin xyz="0 0 0.065" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.012" length="0.11"/>
      </geometry>
      <material name="blue_handle">
        <color rgba="0.1 0.3 0.7 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.065" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.012" length="0.11"/>
      </geometry>
    </collision>

    <!-- Handle grip -->
    <visual>
      <origin xyz="0 0 0.045" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.014" length="0.025"/>
      </geometry>
      <material name="dark_rubber">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>

    <!-- Brush head -->
    <visual>
      <origin xyz="0 0 0.006" rpy="0 0 0"/>
      <geometry>
        <box size="0.075 0.045 0.012"/>
      </geometry>
      <material name="white_head">
        <color rgba="0.95 0.95 0.95 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.006" rpy="0 0 0"/>
      <geometry>
        <box size="0.075 0.045 0.012"/>
      </geometry>
    </collision>

    <!-- Simplified collision for bristles -->
    <collision>
      <origin xyz="0 0 -0.002" rpy="0 0 0"/>
      <geometry>
        <box size="0.065 0.04 0.006"/>
      </geometry>
    </collision>

  </link>

  <!-- Joint to attach brush to robot end-effector -->
  <joint name="brush_mount_joint" type="fixed">
    <parent link="ee_link"/>
    <child link="mirror_brush_body"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>
